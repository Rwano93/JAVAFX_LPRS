<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.gestionevenements.controllers.DashboardController">
    <top>
        <VBox>
            <MenuBar stylesheets="@../styles/global.css">
                <Menu text="Fichier">
                    <MenuItem onAction="#handleLogout" text="Déconnexion" />
                </Menu>
                <Menu fx:id="gestionMenu" text="Gestion" />
            </MenuBar>
            <HBox alignment="CENTER_RIGHT" spacing="10" stylesheets="@../styles/global.css">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Label fx:id="userInfoLabel" text="Connecté en tant que: " />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20" styleClass="dashboard-container" stylesheets="@../styles/global.css">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <Label styleClass="title-label" text="Tableau de bord" />

                    <GridPane alignment="CENTER" hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                        </columnConstraints>

                        <VBox styleClass="dashboard-card" stylesheets="@../styles/global.css" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label styleClass="card-title" text="Résumé" />
                            <GridPane fx:id="summaryGrid" hgap="10" vgap="5" />
                        </VBox>

                        <VBox styleClass="dashboard-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label styleClass="card-title" text="Activités récentes" />
                            <ListView fx:id="recentActivitiesList" prefHeight="200" />
                        </VBox>

                        <VBox styleClass="dashboard-card" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                            <Label styleClass="card-title" text="Actions rapides" />
                            <FlowPane fx:id="quickActionsPane" hgap="10" vgap="10" />
                        </VBox>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>

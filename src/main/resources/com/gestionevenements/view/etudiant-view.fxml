<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" styleClass="form-container" stylesheets="@../styles/global.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.gestionevenements.controllers.EtudiantController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label styleClass="title-label" stylesheets="@../styles/global.css" text="Gestion des étudiants" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleAjouterEtudiant" styleClass="add-button" text="Ajouter" />
        <Button onAction="#handleModifierEtudiant" styleClass="edit-button" text="Modifier" />
        <Button onAction="#handleSupprimerEtudiant" styleClass="delete-button" text="Supprimer" />
    </HBox>

    <TableView fx:id="etudiantTableView" stylesheets="@../styles/global.css" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nomColumn" text="Nom" />
            <TableColumn fx:id="prenomColumn" text="Prénom" />
            <TableColumn fx:id="emailColumn" text="Email" />
        </columns>
    </TableView>
</VBox>

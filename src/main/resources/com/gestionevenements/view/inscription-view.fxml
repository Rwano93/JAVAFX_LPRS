<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" styleClass="form-container" stylesheets="@../styles/global.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.gestionevenements.controllers.InscriptionController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label styleClass="title-label" text="Gestion des dossiers d'inscription" />

    <TableView fx:id="inscriptionTableView" stylesheets="@../styles/global.css" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nomColumn" text="Nom" />
            <TableColumn fx:id="prenomColumn" text="Prénom" />
            <TableColumn fx:id="dateInscriptionColumn" text="Date d'inscription" />
            <TableColumn fx:id="filiereColumn" text="Filière" />
            <TableColumn fx:id="statutColumn" text="Statut" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleAjouterInscription" text="Ajouter" />
        <Button onAction="#handleModifierInscription" text="Modifier" />
        <Button onAction="#handleSupprimerInscription" text="Supprimer" />
        <Button onAction="#handleVoirDetailsInscription" text="Voir détails" />
    </HBox>
</VBox>

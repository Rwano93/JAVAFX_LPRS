<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" styleClass="form-container" stylesheets="@../styles/global.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.gestionevenements.controllers.RendezVousController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label styleClass="title-label" text="Gestion des rendez-vous" />

    <HBox alignment="CENTER" spacing="10">
        <ComboBox fx:id="etudiantComboBox" promptText="Sélectionner un étudiant" />
        <ComboBox fx:id="professeurComboBox" promptText="Sélectionner un professeur" />
        <DatePicker fx:id="datePicker" promptText="Sélectionner une date" />
        <ComboBox fx:id="heureComboBox" promptText="Sélectionner une heure" />
        <ComboBox fx:id="salleComboBox" promptText="Sélectionner une salle" />
        <Button fx:id="ajouterButton" onAction="#handleAjouterRendezVous" text="Ajouter" />
    </HBox>

    <TableView fx:id="rendezVousTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="etudiantColumn" text="Étudiant" />
            <TableColumn fx:id="professeurColumn" text="Professeur" />
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn fx:id="heureColumn" text="Heure" />
            <TableColumn fx:id="salleColumn" text="Salle" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="modifierButton" onAction="#handleModifierRendezVous" text="Modifier" />
        <Button fx:id="supprimerButton" onAction="#handleSupprimerRendezVous" text="Supprimer" />
    </HBox>
</VBox>
